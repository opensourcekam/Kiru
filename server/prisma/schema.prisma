generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "srv-captain--kiru-db:3306"
}

model Comments {
  id     Int     @id
  body   String?
  rating Int?
  post   Post    @relation(fields: [id], references: [id])
}

model Post {
  id         Int        @default(autoincrement()) @id
  audio      String?
  content    String
  created_at String?
  lineOne    String?
  lineThree  String?
  lineTwo    String?
  published  Boolean
  title      String?
  type       Post_type
  url        String?
  valid      Boolean?
  author     User       @relation(fields: [id], references: [id])
  comments   Comments[]
}

model Social {
  id        Int     @id
  instagram String?
  linkedin  String?
  published Boolean
  snapchat  String?
  tiktok    String?
  twitter   String?
  author    User    @relation(fields: [id], references: [id])
}

model User {
  created_at DateTime @default(now())
  email      String?  @unique
  firstName  String?
  id         Int      @default(autoincrement()) @id
  lastName   String?
  name       String?
  password   String?
  posts      Post[]
  social     Social[]
}

enum Post_type {
  HAIKU
  RAP
}